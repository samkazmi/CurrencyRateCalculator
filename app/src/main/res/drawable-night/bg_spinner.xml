<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="#232323" />
                </shape>
            </item>

            <item android:gravity="end" android:right="25dp" android:top="5dp"
                android:bottom="5dp" android:left="1dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_up_down" android:tint="@color/purple_500" />

            </item>

        </layer-list>

    </item>

</selector>